<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>溫濕度圖表</title>
<link href="css/c3.min.css" rel="stylesheet" type="text/css">
<style type="text/css">
body {
	font-family:"微軟正黑體", "黑體-繁", sans-serif;
}
</style>
<script src="js/d3.v3.min.js"></script>
<script src="js/c3.min.js"></script>
</head>

<body>
<div id="chart"></div>
<script>
var chart = c3.generate({
    bindto: '#chart',
    data: {
      x:'時間',
      xFormat:'%Y-%m-%dT%I:%M:%S.%LZ',
      json: <%- JSON.stringify(docs) %>,
      keys: {
        x: '時間',
        value: ['溫度', '濕度']
      }
    },
    axis: {
      x: {
        type: 'timeseries',
        tick: {format: '%m/%d'}
      },
      y: {
        label: {
          text: '溫濕度',
          position: 'outer-middle'
        }
      }
    }
});
</script>
</body>
</html>